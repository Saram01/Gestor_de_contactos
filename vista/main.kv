<LoginScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgb: 0.1, 0.1, 0.4  # Fondo azul oscuro
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.8
            pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Centra el contenido

            Label:
                text: 'Inicio de Sesión'
                font_size: 24

            TextInput:
                id: email_input
                hint_text: 'Correo electrónico'
                multiline: False

            TextInput:
                id: password_input
                hint_text: 'Contraseña'
                password: True
                multiline: False

            Button:
                text: 'Iniciar Sesión'
                size_hint: 0.5, None  # Botón más pequeño
                height: 40
                on_press: root.iniciar_sesion()
                pos_hint: {"center_x": 0.5}

            Label:
                id: message_label
                text: ''
                color: 1, 0, 0, 1  # Mensajes en rojo

            Button:
                text: 'Registrarse'
                size_hint: 0.5, None
                height: 40
                on_press: app.root.current = 'register'
                pos_hint: {"center_x": 0.5}


<RegisterScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgb: 0.1, 0.1, 0.4  # Fondo azul oscuro
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.8
            pos_hint: {"center_x": 0.5} # Centra el contenido

            Label:
                text: 'Registro de Usuario'
                font_size: 24

            TextInput:
                id: nombre_input
                hint_text: 'Nombre completo'
                multiline: False

            TextInput:
                id: email_input
                hint_text: 'Correo electrónico'
                multiline: False

            TextInput:
                id: password_input
                hint_text: 'Contraseña'
                password: True
                multiline: False

            Button:
                text: 'Registrar'
                size_hint: 0.5, None
                height: 40
                on_press: root.registrar_usuario()
                pos_hint: {"center_x": 0.5}

            Label:
                id: message_label
                text: ''
                color: 1, 0, 0, 1

            Button:
                text: 'Volver a Inicio de Sesión'
                size_hint: 0.5, None
                height: 40
                on_press: app.root.current = 'login'
                pos_hint: {"center_x": 0.5}


<MenuScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgb: 0.1, 0.1, 0.4  # Fondo azul oscuro
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            size_hint: 0.8, 0.8
            pos_hint: {"center_x": 0.5}

            Label:
                id: contactos_label
                text: 'Gestor de Contactos'
                font_size: 18
                color: 1, 1, 1, 1  # Texto blanco

            Button:
                text: 'Cerrar Sesión'
                size_hint: 0.5, None
                height: 40
                on_press: app.root.current = 'login'
                pos_hint: {"center_x": 0.5}

            TextInput:
                id: nombre_input
                hint_text: 'Nombre del contacto'
                multiline: False

            TextInput:
                id: telefono_input
                hint_text: 'Teléfono'
                multiline: False

            TextInput:
                id: email_input
                hint_text: 'Email'
                multiline: False

            TextInput:
                id: categoria_input
                hint_text: 'Categoría (opcional)'
                multiline: False

            Button:
                text: 'Agregar Contacto'
                size_hint: 0.5, None  # Hace que el botón ocupe la mitad del ancho del contenedor
                height: 40  # Fija la altura del botón
                pos_hint: {"center_x": 0.5}  # Centra el botón horizontalmente
                color: 1, 1, 1, 1  # Texto blanco
                on_press: root.agregar_contacto()


            TextInput:
                id: buscar_nombre_input
                hint_text: 'Buscar contacto por nombre'
                multiline: False

            Button:
                text: 'Buscar Contacto'
                size_hint: 0.5, None
                height: 40
                pos_hint: {"center_x": 0.5}
                color: 1, 1, 1, 1
                on_press: root.buscar_contacto()

            TextInput:
                id: eliminar_email_input
                hint_text: 'Eliminar contacto por email'
                multiline: False

            Button:
                text: 'Eliminar Contacto'
                size_hint: 0.5, None
                height: 40
                pos_hint: {"center_x": 0.5}
                on_press: root.eliminar_contacto()

            TextInput:
                id: exportar_archivo_input
                hint_text: 'Nombre del archivo para exportar'
                multiline: False

            Button:
                text: 'Exportar Contactos'
                size_hint: 0.5, None
                height: 40
                pos_hint: {"center_x": 0.5}
                on_press: root.exportar_contactos()

            TextInput:
                id: importar_archivo_input
                hint_text: 'Nombre del archivo para importar'
                multiline: False

            Button:
                text: 'Importar Contactos'
                size_hint: 0.5, None
                height: 40
                pos_hint: {"center_x": 0.5}
                on_press: root.importar_contactos()

            Label:
                id: contactos_label
                text: ''
                font_size: 16
                color: 0, 0, 0, 1

